# ================================================================================ #
#                                 Cargo Clear	                                   #
# ================================================================================ #

clean:
	@echo "Cleaning up..."
	cargo clean

# ================================================================================ #
#                                 Cargo Check	                                   #
# ================================================================================ #

check-workspace:
	@echo "Check Workspace..."
	@cargo check --workspace

doc:
	echo "Gerando documentação...";
	cargo doc --no-deps;

# ================================================================================ #
#                                 Cargo Build DEV                                  #
# ================================================================================ #

build:
	@echo "Building DEV..."
	@cargo build


# ================================================================================ #
#                                 Cargo Release                                    #
# ================================================================================ #

release:
	@echo "Building release..."
	@cargo build --release

# ================================================================================ #
#                                  Cargo Run                                       #
# ================================================================================ #
run:
	@echo "Running server..."
	cargo run
